<?xml version='1.0' encoding='utf-8'?>
<widget xmlns="http://www.w3.org/ns/widgets" 
	xmlns:gap="http://phonegap.com/ns/1.0" 
	ios-CFBundleIdentifier="com.interlunium.58.4247.ostsee" 
	id="com.tourias.android.guide.oht" 
	version="4.1" 
	versionCode="12"
	android-versionCode="12">

 	<name>Ostsee</name>
  	<description>Offizielle App des Ostsee-Holstein-Tourismus e.V.</description>
  	<author href="http://toro-digital.com" email="info@toro-digital.com">TORO Digital</author>
  	<content src="index.html"/>
  	<preference name="DisallowOverscroll" value="false"/>
  	<preference name="android-minSdkVersion" value="14"/>
  	<preference name="orientation" value="portrait" />
  	<preference name="target-device" value="handset" />
	
	<!-- PLUGINS -->
	<plugin name="cordova-plugin-device" spec="1.1.3" />
	<plugin name="cordova-plugin-device-orientation" spec="1.0.4" />
	<plugin name="cordova-plugin-dialogs" spec="1.2.1" />
	<plugin name="cordova-plugin-file" spec="4.1.1" />
	<plugin name="cordova-plugin-file-transfer" spec="1.5.1" />
	<plugin name="cordova-plugin-geolocation" spec="2.1.0" />
	<plugin name="cordova-plugin-globalization" spec="1.0.4" />
	<plugin name="cordova-plugin-network-information" spec="1.2.1" />
	<plugin name="cordova-plugin-splashscreen" spec="3.2.2" />
		<preference name="FadeSplashScreen" value="false"/> 
		<preference name="ShowSplashScreenSpinner" value="false"/>
		<preference name="SplashMaintainAspectRatio" value="true" />
	<plugin name="cordova-plugin-statusbar" spec="2.1.3" />
	<plugin name="cordova-plugin-whitelist" spec="1.2.2" />
    
 	<platform name="android">
    <icon src="res/icons/android/drawable-ldpi-icon.png" qualifier="ldpi"/>
    <icon src="res/icons/android/drawable-mdpi-icon.png" qualifier="mdpi"/>
    <icon src="res/icons/android/drawable-hdpi-icon.png" qualifier="hdpi"/>
    <icon src="res/icons/android/drawable-xhdpi-icon.png" qualifier="xhdpi"/>
    <icon src="res/icons/android/drawable-xxhdpi-icon.png" qualifier="xxhdpi"/>
    <icon src="res/icons/android/drawable-xxxhdpi-icon.png" qualifier="xxxhdpi"/>
    <splash src="res/screen/android/drawable-port-ldpi-screen.png" qualifier="port-ldpi"/>
    <splash src="res/screen/android/drawable-port-mdpi-screen.png" qualifier="port-mdpi"/>
    <splash src="res/screen/android/drawable-port-hdpi-screen.png" qualifier="port-hdpi"/>
    <splash src="res/screen/android/drawable-port-xhdpi-screen.png" qualifier="port-xhdpi"/>
    <splash src="res/screen/android/drawable-port-xxhdpi-screen.png" qualifier="port-xxhdpi"/>
    <splash src="res/screen/android/drawable-port-xxxhdpi-screen.png" qualifier="port-xxxhdpi"/>
 	</platform>
  
 	<platform name="ios">
    <icon src="res/icons/ios/icon.png" platform="ios" width="57" height="57"/>
    <icon src="res/icons/ios/icon@2x.png" platform="ios" width="114" height="114"/>
    <icon src="res/icons/ios/icon-40.png" platform="ios" width="40" height="40"/>
    <icon src="res/icons/ios/icon-40@2x.png" platform="ios" width="80" height="80"/>
    <icon src="res/icons/ios/icon-40@3x.png" platform="ios" width="120" height="120"/>
    <icon src="res/icons/ios/icon-50.png" platform="ios" width="50" height="50"/>
    <icon src="res/icons/ios/icon-50@2x.png" platform="ios" width="100" height="100"/>
    <icon src="res/icons/ios/icon-60.png" platform="ios" width="60" height="60"/>
    <icon src="res/icons/ios/icon-60@2x.png" platform="ios" width="120" height="120"/>
    <icon src="res/icons/ios/icon-60@3x.png" platform="ios" width="180" height="180"/>
    <icon src="res/icons/ios/icon-72.png" platform="ios" width="72" height="72"/>
    <icon src="res/icons/ios/icon-72@2x.png" platform="ios" width="144" height="144"/>
    <icon src="res/icons/ios/icon-76.png" platform="ios" width="76" height="76"/>
    <icon src="res/icons/ios/icon-76@2x.png" platform="ios" width="152" height="152"/>
    <icon src="res/icons/ios/icon-83.5@2x.png" platform="ios" width="167" height="167"/>
    <icon src="res/icons/ios/icon-small.png" platform="ios" width="29" height="29"/>
    <icon src="res/icons/ios/icon-small@2x.png" platform="ios" width="58" height="58"/>
    <icon src="res/icons/ios/icon-small@3x.png" platform="ios" width="87" height="87"/>
    <splash src="res/screen/ios/Default-568h@2x~iphone.png" platform="ios" width="640" height="1136"/>
    <splash src="res/screen/ios/Default-667h.png" platform="ios" width="750" height="1334"/>
    <splash src="res/screen/ios/Default-736h.png" platform="ios" width="1242" height="2208"/>
    <splash src="res/screen/ios/Default@2x~iphone.png" platform="ios" width="640" height="960"/>
    <splash src="res/screen/ios/Default~iphone.png" platform="ios" width="320" height="480"/>
  	</platform>

	<!-- TORO: Ergänzungen, die anscheinend sein müssen - zwingend im Root Folder -->
	<icon src="icon.png"/>
	<splash src="splash.png"/>
  
  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
</widget>